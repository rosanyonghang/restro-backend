{
    "extends": ["@commitlint/config-conventional"],
    "rules": {
        "type-enum": [
            2,
            "always",
            [
                "CI",
                "Chore",
                "Docs",
                "TypoFix",
                "Feature",
                "BugFix",
                "HotFix",
                "Refactor",
                "Revert",
                "Style",
                "Improvements",
                "Temp",
                "Fix"
            ]
        ],
        "type-case": [2, "always", "pascal-case"],
        "scope-case": [2, "always", "pascal-case"],
        "subject-case": [2, "always", "sentence-case"]
    }
}
